  "custom/spotify": {
      "exec": "/usr/bin/python3 ~/.config/waybar/custom-modules/mediaplayer/mediaplayer.py --player spotify",
      "format": "{}  ÔÜº",
      "max-length": 55,
      "return-type": "json",
      "on-click": "playerctl play-pause --player spotify",
      "on-click-right": "pavucontrol-qt",
      "on-scroll-up": "playerctl next",
      "on-scroll-down": "playerctl previous"
   },
  "pulseaudio/slider": {
    "min": 0,
    "max": 100,
    "orientation": "horizontal"
  },

  "cava": {
          //"cava_config": "/home/martin/hyprland-setup/scripts/cava-config.conf",
          "framerate": 30,
          "autosens": 1,
          "sensitivity": 100,
          "bars": 14,
          "lower_cutoff_freq": 50,
          "higher_cutoff_freq": 10000,
          "method": "pipewire",
          "source": "auto",
          "stereo": true,
          "reverse": false,
          "bar_delimiter": 0,
          "monstercat": false,
          "waves": false,
          "noise_reduction": 0.77,
          "input_delay": 2,
          "format-icons" : ["‚ñÅ", "‚ñÇ", "‚ñÉ", "‚ñÑ", "‚ñÖ", "‚ñÜ", "‚ñá", "‚ñà" ],
          "actions": {
                     "on-click-right": "mode"
                     }
  },
  "custom/cava_mviz": {
      "exec": "~/hyprland-setup/scripts/waybar-cava.sh",
      "format": "{}"
  },
  "custom/playerctl": {
      "format": "ÔÖÑ  <span>{}</span>  ÔÜº",
      "return-type": "json",
      "max-length": 55,
      "exec": "playerctl --player spotify metadata --format '{\"text\": \"{{artist}} ~ {{markup_escape(title)}}\", \"tooltip\": \"{{playerName}} : {{markup_escape(title)}}\", \"alt\": \"{{status}}\", \"class\": \"{{status}}\"}' -F",
      "on-click-middle": "playerctl play-pause --player spotify",
      "on-click": "playerctl previous",
      "on-click-right": "playerctl next",
      "scroll-step": 5.0,
      "on-scroll-up": "~/.config/hypr/scripts/Volume.sh --inc",
      "on-scroll-down": "~/.config/hypr/scripts/Volume.sh --dec",
      "smooth-scrolling-threshold": 1,
  },
  "mpris": {
  	"format": "{status_icon} {dynamic}  {player_icon}",
  	"format-paused": "{status_icon} <i>{dynamic}</i>",
  	"dynamic-order": ["artist", "title"],
	"dynamic-separator": " - ",
	"max-length": 55,
  	"interval": 0,
  	"player-icons": {
  		"default": "‚ñ∂",
  		"mpv": "üéµ",
  		"spotify": "ÔÜº",
  		"chromium": "‚ñ∂"
